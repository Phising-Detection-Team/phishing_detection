# Flask Configuration
FLASK_ENV=development
SECRET_KEY=change-me-in-production

# Database Configuration
# For development: defaults to SQLite (app.db) if not set
# For production: must set to PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/phishing_db

# Redis Configuration
# For caching LLM responses and query results
REDIS_URL=redis://localhost:6379/0

# LLM API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Semantic Kernel Configuration
SEMANTIC_KERNEL_LOG_LEVEL=WARNING
